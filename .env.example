# Backend TTS Configuration
FLASK_SECRET_KEY=change-this-in-production-use-strong-random-key
FLASK_DEBUG=false
FLASK_PORT=4000

# CORS - Permitir acceso desde el frontend
ALLOWED_ORIGINS=http://localhost:3004,http://192.168.30.254:3004

# Límite máximo de peticiones por usuario/IP
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=86400

# Seguridad frontend <-> backend
ALLOWED_FRONTEND_ORIGINS=https://ai.cloudmusic.cl,http://localhost:3004
REQUIRE_SIGNED_REQUESTS=true
FRONTEND_KEY_ID=tts-frontend
FRONTEND_SIGNING_SECRET=cambia-esta-clave-firmada
SIGNATURE_MAX_AGE_SECONDS=300

# Cloudflare Turnstile
REQUIRE_TURNSTILE=true
TURNSTILE_SECRET_KEY=cambia-esta-secret-key

# Redis
REDIS_URL=redis://redis:6379/0

# Directorios
OUTPUT_DIR=outputs
TEMP_DIR=temp_uploads
VOICES_DIR=voice_gallery
VOICES_DB=voices_db.json
