{
  "name": "TTS Voice Cloning - Backend API",
  "repository": "https://github.com/tu-usuario/tts-service",
  "dockerfile": "Dockerfile",
  "port": 5000,
  "domains": ["api-voz.cloudmusic.cl"],
  "healthCheckPath": "/health",
  "environmentVariables": {
    "PORT": "5000",
    "ALLOWED_ORIGINS": "https://ai.cloudmusic.cl",
    "ENVIRONMENT": "production",
    "FLASK_SECRET_KEY": "CHANGE_THIS_SECURE_KEY",
    "CUDA_VISIBLE_DEVICES": "0",
    "XTTS_MODEL": "tts_models/multilingual/multi-dataset/xtts_v2",
    "FLASK_DEBUG": "false"
  },
  "dockerOptions": {
    "deploy": {
      "resources": {
        "reservations": {
          "devices": [
            {
              "driver": "nvidia",
              "count": 1,
              "capabilities": ["gpu"]
            }
          ]
        }
      }
    }
  }
}
